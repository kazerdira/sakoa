rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // User profiles collection - allow any authenticated user to read all profiles (for search)
    // but only allow users to write their own profile
    match /user_profiles/{userId} {
      // Anyone authenticated can read profiles (needed for search)
      allow read: if isAuthenticated();
      
      // Users can only create/update/delete their own profile
      allow write: if isAuthenticated();
    }
    
    // Contacts collection - allow authenticated users to manage their contacts
    match /contacts/{contactId} {
      // Users can read contacts where they are either the user or the contact
      allow read: if isAuthenticated();
      
      // Users can create contacts where they are the user_token
      allow create: if isAuthenticated();
      
      // Users can update/delete contacts where they are involved
      allow update, delete: if isAuthenticated();
    }
    
    // Messages collection - allow authenticated users to read/write their own messages
    match /message/{messageId} {
      // Users can read messages they sent or received
      allow read: if isAuthenticated();
      
      // Users can create messages they are sending
      allow create: if isAuthenticated();
      
      // Users can update/delete messages they sent
      allow update, delete: if isAuthenticated();
      
      // Nested msglist subcollection (individual messages within a conversation)
      match /msglist/{msgId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated();
      }
    }
    
    // Chat call collection - allow authenticated users to manage their calls
    match /chatcall/{callId} {
      // Users can read calls they are involved in
      allow read: if isAuthenticated();
      
      // Users can create calls they are starting
      allow create: if isAuthenticated();
      
      // Users can update/delete calls they are involved in
      allow update, delete: if isAuthenticated();
    }
    
    // ðŸ”¥ BLOCKS COLLECTION - Industrial-grade blocking system
    match /blocks/{blockId} {
      // Users can read blocks where they are the blocker OR the blocked user
      allow read: if isAuthenticated();
      
      // Users can create blocks (we trust the client to set correct blocker_token)
      allow create: if isAuthenticated();
      
      // Users can update blocks they created
      allow update: if isAuthenticated();
      
      // Users can delete blocks they created (to unblock)
      allow delete: if isAuthenticated();
    }
  }
}
